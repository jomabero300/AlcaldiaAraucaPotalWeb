@model AlcaldiaAraucaPortalWeb.Models.ModelsViewRepo.Pqrs.PqrsLineCategoryViewModel

@{
    ViewData["Title"] = "Reporte";
}

<h4>Reporte linea estrategica, categoría y rango de fecha</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PqrsReportLineCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PqrsDateStart" class="control-label"></label>
                <input asp-for="PqrsDateStart" class="form-control" />
                <span asp-validation-for="PqrsDateStart" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PqrsDateEnd" class="control-label"></label>
                <input asp-for="PqrsDateEnd" type="date" class="form-control" />
                <span asp-validation-for="PqrsDateEnd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PqrsCategoryId" class="control-label"></label>
                <select asp-for="PqrsCategoryId" class="form-control" asp-items="ViewBag.PqrsCategoryId"></select>
                <span asp-validation-for="PqrsCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PqrsStrategicLineId" class="control-label"></label>
                <select asp-for="PqrsStrategicLineId" class="form-control" asp-items="ViewBag.PqrsStrategicLineId"></select>
                <span asp-validation-for="PqrsStrategicLineId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-file-earmark-pdf"></i>Generar</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
