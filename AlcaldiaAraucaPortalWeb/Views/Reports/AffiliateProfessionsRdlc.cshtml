@model AlcaldiaAraucaPortalWeb.Models.ModelsViewRepo.Pqrs.ProfessionViewModel

@{
    ViewData["Title"] = "Reporte";
}

<h4>Reporte profesión</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AffiliateProfessionsRdlc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProfessionId" class="control-label"></label>
