@model List<AlcaldiaAraucaPortalWeb.Models.ModelsViewGene.FilterViewModel>

@{
    ViewData["Title"] = "Buqueda";
}

<div class="row d-flex justify-content-center text-center g-0">
    @foreach (var item in Model)
    {
        <div class="card" style="width:20em;margin:10px;">
            <img src="@item.ImageUrl" class="card-img-top" />
            <div class="card-body">
                <h4 class="card-title">@item.Name</h4>
                <p class="card-text text-justify">@item.descrition</p>
                <a asp-controller="LineStrategic" asp-action="GeneViewHorizontalDetails" asp-route-id="@item.id" class="btn btn-sm btn-outline-success">Ver..</a>
            </div>
        </div>
    }
</div>
