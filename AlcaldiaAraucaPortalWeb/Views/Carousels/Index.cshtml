@model IEnumerable<AlcaldiaAraucaPortalWeb.Models.CarouselModelView>

@{
    ViewData["Title"] = "Index";
}

<div class="row" style="width:100%;">
    <di class="col-md-6">
        <h1>Generos</h1>
    </di>
    <di class="col-md-4 text-right">
        <a asp-action="Create" class="btn btn-sm btn-primary"><i class="bi bi-file-earmark-fill"></i> Nuevo</a>
    </di>
</div>

<table id="MyTable" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ImageName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageName)
                </td>
                <td align="center">
                    <a asp-action="Delete" asp-route-id="@item.ImageName" class="btn btn-sm btn-danger"><i class="bi bi-trash2-fill"></i> Elimnar</a>
                </td>
            </tr>
        }
    </tbody>
</table>