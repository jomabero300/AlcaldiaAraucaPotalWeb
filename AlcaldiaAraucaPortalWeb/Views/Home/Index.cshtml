@model AlcaldiaAraucaPortalWeb.Models.CarouselModelViewList;

@{
    ViewData["Title"] = "Inicio";
}

<body>
    <section>
        <div class="container-sm">
            <div class="text-center">
                <div class="col-md-12">
                    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            @{ var cont = 0;}
                            @foreach (var item in Model.carousels)
                            {
                                if (cont == 0)
                                {
                                    <div class="carousel-item active" data-interval="3000">
                                        <img src="~/Image/@item.ImageName" class="img-fluid" width="996" height="400" alt="Iamgen 1">
                                    </div>
                                }
                                else
                                {

                                    <div class="carousel-item" data-interval="2000">
                                        <img src="~/Image/@item.ImageName" class="img-fluid" width="996" height="400" alt="Iamgen 1">
                                    </div>
                                }
                                cont = 1;
                            }

                            @*<div class="carousel-item active" data-interval="5000">
                                    <img src="~/Image/Imagen01.png" class="img-fluid" width="996" height="400" alt="Iamgen 1">
                                </div>
                                <div class="carousel-item" data-interval="2000">
                                    <img src="~/Image/Imagen02.jpeg" class="img-fluid" width="996" height="400" alt="Imagen 2">
                                </div>*@
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Anterior</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Siguiente</span>
                    </a>
                </div>
                <hr />
                <div class="row d-flex justify-content-center text-center g-2">
                    @foreach (var item in Model.contents)
                    {
                        <div class="card" style="width:20em;margin:10px;">
                            <a asp-controller="Home" asp-action="Menu" asp-route-id="@item.url" class="btn btn-sm btn-primary">
                                <img src="@Url.Content( @item.img)" class="card-img-top g-2" />
                            </a>
                            <div class="card-body">
                                <div class="card-title">
                                    <h2>@item.title</h2>
                                </div>
                                <div class="card-text">
                                    <p>@item.text</p>
                                </div>

                                @if (item.url != "8")
                                {
                                    <a asp-controller="Home" asp-action="Menu" asp-route-id="@item.url" class="btn btn-sm btn-primary">Más...</a>
                                }
                                else
                                {
                                    //<button class="btn btn-danger deleteItem" data-toggle="modal" data-target="#victorModal">Más...</button>
                                    <a href="#victorModal" role="button" data-toggle="modal" class="btn btn-sm btn-primary">
                                        Más...
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <footer>
        <h4 style="color:white;">Avisos legales</h4>
        <a href="#" style="color:white">Política de cookies</a>
    </footer>
</body>
<!-- Modal -->
<div id="victorModal" class="modal fade">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mensajes del sistemas</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-hidden="true"></button>
            </div>
            <div class="modal-body">

                <p class="text-warning"><small>Mensaje del sistema de información</small></p>
                <hr />
                <p>Ciudadano/a tenga en cuenta que la información a registrar en el siguiente formulario se encuentra protegida bajo la Ley del Habeas data -Ley 1581 de 2012, Decreto1377 de 2013- si quiere conocer más sobre esta ley de click:</p>
            </div>
            <div class="modal-footer">
                <a href="https://www.arauca-arauca.gov.co/Ciudadanos/Paginas/PQRD-Identificacion.aspx" class="mr-auto" target="_blank">PQRD con identificación</a>
                <a href="https://www.arauca-arauca.gov.co/Ciudadanos/Paginas/PQRD-Anonima.aspx" target="_blank">PQRD anónima</a>

            </div>
        </div>
    </div>
</div>