@model AlcaldiaAraucaPortalWeb.Data.Entities.Gene.PqrsUserStrategicLine

@{
    ViewData["Title"] = "Nuevo";
}

<h1>Nuevo</h1>

<h4>Usuario y Linea</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StateId" />


            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" id="UserId" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PqrsStrategicLineId" class="control-label"></label>
                <select asp-for="PqrsStrategicLineId" id="PqrsStrategicLineId" class="form-control" asp-items="ViewBag.PqrsStrategicLineId"></select>
                <span asp-validation-for="PqrsStrategicLineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-save"></i>Guardar</button> |
                <a asp-action="Index" class="btn btn-sm btn-success"><i class="bi bi-chevron-left"></i> Retornar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/PqrsUserStrategicLine.js"></script>

}
