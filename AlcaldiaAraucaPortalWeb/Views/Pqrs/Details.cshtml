@model AlcaldiaAraucaPortalWeb.Data.Entities.Gene.Pqrs

@{
    ViewData["Title"] = "Detalles";
}

<div>
    <h4>Peticiones, quejas, reclamos y solicitudes - detalles</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PqrsDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PqrsDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PqrsSubject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PqrsSubject)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PqrsMessage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PqrsMessage)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PqrsCategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PqrsCategory.PqrsCategoryName)
        </dd>
    </dl>
    @if (Model.PqrsAttachments.Count > 0)
    {
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>Ruta</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PqrsAttachments)
                    {
                        @if (item.PqrsAttachmentsPath.EndsWith('f'))
                        {
                            <tr>
                                <td><a href="../PDFViewerNewTab?fileName=@item.PqrsAttachmentsPath" target="_blank"> @item.PqrsAttachmentsPath</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>Ruta</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PqrsAttachments)
                    {
                        @if (item.PqrsAttachmentsPath.EndsWith('g'))
                        {
                            <tr>
                                <td><a href="../PDFViewerNewTab?fileName=@item.PqrsAttachmentsPath" target="_blank"> @item.PqrsAttachmentsPath</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PqrsId" class="btn btn-sm btn-warning"><i class="bi bi-pencil-fill"></i>Edit</a> |
    <a asp-action="Index" class="btn btn-sm btn-success"><i class="bi bi-chevron-double-left"></i>Retornar</a>
</div>
