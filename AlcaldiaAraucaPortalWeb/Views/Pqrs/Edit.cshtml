@model AlcaldiaAraucaPortalWeb.Data.Entities.Gene.Pqrs

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Peticiones, quejas, reclamos y solicitudes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PqrsId" />
            <input type="hidden" asp-for="PqrsDate" />
            <input type="hidden" asp-for="PqrsCategoryId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="StateId" />


            <div class="form-group">
                <label asp-for="PqrsCategoryId" class="control-label"></label>
                <select asp-for="PqrsCategoryId" class="form-control" asp-items="ViewBag.PqrsCategoryId" disabled></select>
                <span asp-validation-for="PqrsCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" disabled></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PqrsMessage" class="control-label"></label>
                <input asp-for="PqrsMessage" class="form-control" />
                <span asp-validation-for="PqrsMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-save-fill"></i>Guardar</button> |
                <a asp-action="Index" class="btn btn-sm btn-success"><i class="bi bi-chevron-double-left"></i>Retornar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
