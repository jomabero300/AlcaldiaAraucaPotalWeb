@model AlcaldiaAraucaPortalWeb.Models.ModelsViewGene.PqrsModelsViewGene

@{
    ViewData["Title"] = "Crear";
}


<h4>Peticiones, quejas, reclamos y solicitudes - nuevo</h4>
<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="PqrsCategoryId" class="control-label"></label>
                <select asp-for="PqrsCategoryId" class="form-control" asp-items="ViewBag.PqrsCategoryId"></select>
                <span asp-validation-for="PqrsCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PqrsStrategicLineId" class="control-label"></label>
                <select asp-for="PqrsStrategicLineId" class="form-control" asp-items="ViewBag.PqrsStrategicLineId"></select>
                <span asp-validation-for="PqrsStrategicLineId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PqrsSubject" class="control-label"></label>
                <input asp-for="PqrsSubject" class="form-control" />
                <span asp-validation-for="PqrsSubject" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-floating">
                    <textarea class="form-control" asp-for="PqrsMessage" placeholder="Mensaje" id="floatingTextarea2"></textarea>
                    <label asp-for="PqrsMessage"></label>
                </div>
                <span asp-validation-for="PqrsMessage" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FileOne" class="control-label"></label>
                <input asp-for="FileOne" class="form-control" type="file" onchange="loadFile1(event)" accept=".pdf" />
                <span asp-validation-for="FileOne" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FileTwo" class="control-label"></label>
                <input asp-for="FileTwo" class="form-control" type="file" onchange="loadFile2(event)" accept=".pdf" />
                <span asp-validation-for="FileTwo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImgOne" class="control-label"></label>
                <input asp-for="ImgOne" class="form-control" type="file" onchange="loadFile3(event)" accept=".jpg,.png,.gif" />
                <span asp-validation-for="ImgOne" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImgTwo" class="control-label"></label>
                <input id="imgTwo" asp-for="ImgTwo" class="form-control" type="file" onchange="loadFile4(event)" accept=".png, .jpg, .jpeg, .gif" />
                <span asp-validation-for="ImgTwo" class="text-danger"></span>
            </div>

        </div>
        
        <div class="col-md-4 text-center">
            <div class="row">
                <div class="col-md-6 text-center">
                    <h5>Archivo 1</h5>
                    <div id="dynamicImage1" class="embed-responsive embed-responsive-16by9">

                    </div>
                </div>
                <div class="col-md-6 text-center">
                    <h5>Archivo 2</h5>
                    <div id="dynamicImage2" class="embed-responsive embed-responsive-16by9">

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 text-center">
                    <h5>Foto 1</h5>
                    <div id="dynamicImage3">

                    </div>

                </div>
                <div class="col-md-6 text-center">
                    <h5>Foto 2</h5>
                    <div id="dynamicImage4">

                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-save-fill"></i>Guardar</button> |
                <a asp-action="Index" class="btn btn-sm btn-success"><i class="bi bi-chevron-double-left"></i>Retornar</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Gene/Pqrs.js"></script>
}
