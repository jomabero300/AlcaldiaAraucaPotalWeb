@using Microsoft.AspNetCore.Identity
@using AlcaldiaAraucaPortalWeb.Data.Entities.Gene

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link small text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-links small btn btn-link text-white">Salir</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link small text-white" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
    </li>
    <li class="nav-item">
        <a class="nav-link small text-white" asp-area="Identity" asp-page="/Account/Login">Ingresar</a>
    </li>
}
</ul>
