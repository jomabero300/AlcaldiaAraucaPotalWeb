@model AlcaldiaAraucaPortalWeb.Data.Entities.Gene.GroupProductive

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Realmente desea eliminar este?</h3>
<div>
    <h4>Grupo Productivo</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GroupProductiveName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GroupProductiveName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StateId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State.StateName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="GroupProductiveId" />
        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash2-fill"></i>Eliminar</button> |
        <a asp-action="Index" class="btn btn-sm btn-success"><i class="bi bi-chevron-double-left"></i>Retornar</a>
    </form>
</div>
