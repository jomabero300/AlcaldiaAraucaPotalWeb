<body>
    <section>
      <div class="container">
        <div class="row">
          <div class="col-sm-6 text-black">

            <div class="px-5 ms-xl-4">
              <i class="bi bi-person-circle bi-2x me-3 pt-5 mt-xl-4" style="color: #3366CC;"></i>
              <span class="h1 fw-bold mb-0">Subscribirse</span>
            </div>

            <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

              <form style="width: 23rem;">
                <div class="form-group">
                    <label asp-for="email" class="control-label"></label>
                    <input id="email" asp-for="email" class="form-control" />
                    <span id="spanEmail" class="text-danger"></span>
                </div>

                <table class="table">
                    <tbody>
                        @{
                            string xx = "";
                        }
                        @foreach (var item in Model.Subscribers)
                        {
                            <tr>
                                <td>
                                    @if (xx != @item.PqrsStrategicLineName)
                                    {
                                        <label>@item.PqrsStrategicLineName</label>
                                        xx=@item.PqrsStrategicLineName;
                                    }
                                </td>
                                <td>
                                    <label>@item.PqrsStrategicLineSectorName</label>
                                </td>
                                <td>
                                    <input type="checkbox" data-id="@item.PqrsStrategicLineSectorId" asp-for="@item.check" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="pt-1 mb-4">
                  <button id="SaveButton" class="btn btn-sm btn-primary btn-lg btn-block" type="button">Guardar</button>
                </div>
              </form>

            </div>

          </div>
          <div class="col-sm-6 px-0 d-none d-sm-block">
            <img src="~/Image/Subscribirse.png" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            <img src="~/Image/Subscribirse2.png" alt="Login image" class="w-100 vh-120" style="object-fit: cover; object-position: left;">
          </div>
        </div>
      </div>
    </section>
    <footer>
        <h4 style="color:white;">Avisos legales</h4>
        <a href="#">Política de cookies</a>
    </footer>

</body>

@section Scripts{
    <script src="~/js/Subscriber/JavaScriptSubscriberjs.js"></script>
}