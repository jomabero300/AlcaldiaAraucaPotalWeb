@model AlcaldiaAraucaPortalWeb.Data.Entities.Gene.PqrsCategory

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Category PQRS</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PqrsCategoryId" />
            <div class="form-group">
                <label asp-for="PqrsCategoryName" class="control-label"></label>
                <input asp-for="PqrsCategoryName" class="form-control" />
                <span asp-validation-for="PqrsCategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-warning"><i class="bi bi-safe2-fill">Actualizar</i></button>
                <a asp-action="Index" class="btn btn-success"><i class="bi bi-chevron-left"></i> Retornar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
