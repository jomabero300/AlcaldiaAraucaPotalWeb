@model AlcaldiaAraucaPortalWeb.Data.Entities.Gene.Profession

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Realmente desea eliminar este?</h3>
<div>
    <h4>Profesión</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProfessionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProfessionName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StateId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State.StateName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProfessionId" />
        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash2-fill"></i>Eliminar</button> |
        <a asp-action="Index" class="btn btn-sm btn-success"><i class="bi bi-chevron-double-left"></i>Retornar</a>
    </form>
</div>
